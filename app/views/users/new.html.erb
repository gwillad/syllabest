<h1> Add a new user </h1>
<%= form_for @user do |f| %>
  <p>
    <%= f.label :first_name %><br>
    <%= f.text_field :first_name %>
  </p>
 
  <p>
    <%= f.label :last_name %><br>
    <%= f.text_area :last_name %>
  </p>
 
  <p>
    <%= f.label :email %><br>
    <%= f.text_area :email %>
  </p>

  <p>
    <%= f.label :password %><br>
    <%= f.text_area :password %>
  </p>

  <p>
    <%= f.label :school %><br>
    <%= f.text_area :school %>
  </p>

  <p>
    <%= f.label :office %><br>
    <%= f.text_area :office %>
  </p>

  <p>
    <%= f.submit %>
  </p>
<% end %>

<%= link_to 'Back', users_path %>