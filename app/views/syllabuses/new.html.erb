<h1>Add a new Syllabus</h1>

<%= form_for :syllabus, url: user_syllabuses_path(@user) do |f| %>
  <p>
    <%= f.label :title %><br>
    <%= f.text_field :title %>
  </p>
 
  <p>
    <%= f.label :location %><br>
    <%= f.text_area :location %>
  </p>

  <p>
    <%= f.label :course_num %><br>
    <%= f.text_area :course_num %>
  </p>
<p>
  <%= f.label :section_num %><br>
  <%= f.text_area :section_num %>
</p>
<p>
  <%= f.label :course_type %><br>
  <%= f.text_area :course_type %>
</p>
<p>
  <%= f.label :department %><br>
  <%= f.text_area :department %>
</p>
<p>
  <%= f.label :term %><br>
  <%= f.text_area :term %>
</p>
 
  <p>
    <%= f.submit %>
  </p>
<% end %>

<%= link_to 'Back', users_path %>
