<div class="row">
	<div class="col-md-12">
		<form class="form-horizontal" role="form" id="new_syllabus">
			<div class="form-group">
				<label for="new_syllabus_title" class="col-sm-2 control-label">Title</label>
				<div class="col-sm-10">
					<input type="text" class="form-control" id="new_syllabus_title" placeholder="ex: Intro to Computer Science">
				</div>
			</div>
			<div class="form-group">
				<label for="new_syllabus_location" class="col-sm-2 control-label">Location</label>
				<div class="col-sm-10">
					<input type="text" class="form-control" id="new_syllabus_location" placeholder="ex: Winkelman">
				</div>
			</div>
			<div class="form-group">
				<label for="new_syllabus_course_num" class="col-sm-2 control-label">Course Number</label>
				<div class="col-sm-10">
					<input type="text" class="form-control" id="new_syllabus_course_num" placeholder="ex: jwinkelm@hamilton.edu">
				</div>
			</div>
			<div class="form-group">
				<label for="new_syllabus_department" class="col-sm-2 control-label">Department</label>
				<div class="col-sm-10">
					<input type="text" class="form-control" id="new_syllabus_department" placeholder="ex: abc123">
				</div>
			</div>
			<div class="form-group">
				<label for="new_syllabus_term" class="col-sm-2 control-label">Term</label>
				<div class="col-sm-10">
					<input type="text" class="form-control" id="new_syllabus_term" placeholder="ex: Hamilton College">
				</div>
			</div>
			<div class="form-group">
				<label for="new_syllabus_section_num" class="col-sm-2 control-label">Section Number</label>
				<div class="col-sm-10">
					<input type="text" class="form-control" id="new_syllabus_section_num" placeholder="ex: KJ 137">
				</div>
			</div>
			<div class="form-group">
				<label for="new_syllabus_course_type" class="col-sm-2 control-label">Course Type</label>
				<div class="col-sm-10">
					<input type="text" class="form-control" id="new_syllabus_course_type" placeholder="ex: KJ 137">
				</div>
			</div>
			<button type="submit" class="btn btn-default" id="submit_syllabus">Submit</button>
			<button class="btn btn-default" id="cancel_syllabus">Cancel</button>
		</form>
	</div>
</div>