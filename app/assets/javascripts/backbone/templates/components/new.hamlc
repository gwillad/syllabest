.row
	.col-md-12.col-sm-12#cancel_edit
		%i.fa.fa-close.fa-lg#cancel_edit_button
.row
	.col-md-12.col-sm-12
		%h3#header_label Header Options
.row#header_options
	.col-md-6.col-sm-6
		%h4#header_option_title_left Course
		.checkbox.header_option_left
			%input#course_title{:type=>"checkbox"} Title
		.checkbox.header_option_left
			%input#course_id{:type=>"checkbox"} ID
		.checkbox.header_option_left
			%input#course_school{:type=>"checkbox"} School
		.checkbox.header_option_left
			%input#course_term{:type=>"checkbox"} Term
		.checkbox.header_option_left
			%input#course_room{:type=>"checkbox"} Room
	.col-md-6.col.sm-6#header_options_right
		%h4#header_option_title_right Instructor
		.checkbox.header_option_right
			%input#instructor_name{:type=>"checkbox"} Name
		.checkbox.header_option_right
			%input#instructor_office{:type=>"checkbox"} Office
		.checkbox.header_option_right
			%input#instructor_office_hrs{:type=>"checkbox"} Office Hours
		.checkbox.header_option_right
			%input#instructor_email{:type=>"checkbox"} Email
		.checkbox.header_option_right
			%input#instructor_phone{:type=>"checkbox"} Phone

.row
	.col-md-12.col-sm-12
		%h3#new_component_label New Component
.row
	.col-md-2.col-sm-2
	.col-md-4.col-sm-4#new_plaintext{:title => "Drag to syllabus to add plain text"}
		%i.fa.fa-file-text-o.fa-3x#new_plaintext_button{:component_type => "plaintext"} 
		%h4 Plain Text
	.col-md-4.col-sm-4#new_table{:title => "Drag to syllabus to add table"}
		%i.fa.fa-list.fa-3x#new_table_button{:component_type => "table"}
		%h4 Table
	.col-md-2.col-sm-2
.row
	.col-md-2.col-sm-2
	.col-md-4.col-sm-4#new_calendar{:title => "Drag to syllabus to add calendar"}
		%i.fa.fa-calendar.fa-3x#new_calendar_button{:component_type => "calendar"}
		%h4 Calendar
	.col-md-4.col-sm-4
	.col-md-2.col-sm-2